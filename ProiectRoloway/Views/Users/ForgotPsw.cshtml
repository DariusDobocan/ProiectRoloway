@{
    ViewBag.Title = "ForgotPsw";

}

<body>
    <!-- main -->
    <div class="main">
        <h1 style="color: black">Project</h1>
        <div class="main-w3lsrow">
            <!-- login form -->
            <div class="login-form login-form-left">
                <div class="agile-row">
                    <div class="head">
                        <h2>Change Password</h2>
                        <span class="fa fa-lock"></span>
                    </div>
                    <div class="clear"></div>
                    <div class="login-agileits-top">
                        <form action="changePsw" method="post">
                            <input type="text" class="name" name="Username" Placeholder="Relevant Username" required="" />
                            <input type="password" class="password" name="Password" Placeholder="New password" required="" />
                            <input type="submit" value="Change Password">
                        </form>
                    </div>
                    <div class="login-agileits-bottom">
                        <h6>@Html.ActionLink("Log In", "Login", "Users")</h6>
                    </div>

                </div>
            </div>
        </div>
        
    </div>
    <!-- //main -->
    @if (ViewBag.Message != null)
    {
        <script type="text/javascript">
                    window.onload = function () {alert("@ViewBag.Message")};
        </script>
    }

</body>


